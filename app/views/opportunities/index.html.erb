<style>
  table{
      border-collapse: separate;
    border-spacing: 10px 5px;
  }
</style>

<p id="notice"><%= notice %></p>

<h1>Opportunities</h1>

<table>
  <thead>
    <tr>

      <th>Name</th>
      <th>Lead Source</th>
      <th>Amount</th>
      <th>Type</th>
      <th>Stage Name</th>
      <th>Pursuit Team</th>
      <th>Close Date</th>
      <th>Proposal Due Date</th>
      <th>Probability</th>
      <th>Nature of Work</th>
    </tr>
  </thead>

  <tbody>
    <% @opportunities.each do |opportunity| %>
      <tr>
        <td><%= opportunity.name %></td>
        <td><%= opportunity.leadsource %></td>
        <td><%= opportunity.amount %></td>
        <td><%= opportunity.type %></td>
        <td><%= opportunity.stagename %></td>
        <td><%= opportunity.pursuitteam__c %></td>
        <td><%= opportunity.closedate %></td>
        <td><%= opportunity.proposalduedate__c %></td>
        <td><%= opportunity.probability %></td>
        <td><%= opportunity.natureofwork__c %></td>

        <td><%= link_to 'Show', opportunity %></td>
        <td><%= link_to 'Edit', edit_opportunity_path(opportunity) %></td>
        <td><%= link_to 'Delete', opportunity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Opportunity', new_opportunity_path %>
