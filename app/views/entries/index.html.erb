<style>
table {
    border-collapse: separate;
    border-spacing: 15px 10px;
  }

  p.big{
    font-weight:bold;
    font-size:16px;
}

</style>

<p id="notice"><%= notice %></p>

<h1>Data Entries</h1>


<h3>Existing Contacts</h3>
<p>
  <% if @contacts.blank? %>
    <p> There are no contacts in the system </p>
  <% else %>
    <ul id="contacts"> <% @contacts.each do |c| %>
        <li>
          <%= c.firstname -%>
      </li>
  <% end %>
</ul>  <% end %>
</p>




<table>
  <thead>
    <tr>
      <th><p class='big'>Name</p></th>
      <th><p class='big'>ID</p></th>
      <th><p class='big'>SFID </p></th>
      <th><p class='big'>Last change</p></th>
      <th><p class='big'>Modified At</p></th>
      <th><p class='big'>Message</p></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.name %></td>
        <td><%= entry.emp_id %></td>
        <td><%= entry.SFID %></td>
        <td><%= entry.Last_Change %></td>
        <td><%= entry.Modified_At %></td>
        <td><%= entry.Message %></td>
        <td><%= link_to 'Show', entry %></td>
        <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
        <td><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<br><br><br><br><br>
<%= link_to 'New Entry', new_entry_path %>
