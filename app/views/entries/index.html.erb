<style>
table {
    border-collapse: separate;
    border-spacing: 15px 10px;
}
</style>

<p id="notice"><%= notice %></p>

<h1>Data Entries</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>ID</th>
      <th>SFID </th>
      <th>Last change</th>
      <th>Modified at</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.name %></td>
        <td><%= entry.emp_id %></td>
        <td><%= entry.SFID %></td>
        <td><%= entry.Last_Change %></td>
        <td><%= entry.Modified_At %></td>
        <td><%= entry.Message %></td>
        <td><%= link_to 'Show', entry %></td>
        <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
        <td><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<br><br><br><br><br>
<%= link_to 'New Entry', new_entry_path %>
