<style>
  table{
      border-collapse: separate;
    border-spacing: 15px 10px;
  }
</style>

<div class="row">
    <div>
      <h1>Salesforce Contacts</h1>
     <table>
        <tr>
          <th>ID</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email Address</th>
          <th>Date Created</th>
          <th>Home Phone</th>
       </tr>
       <% @contacts.each do |contact| %>
       <tr>
         <td><%= contact.id %></td>
         <td><%= contact.firstname %></td>
         <td><%= contact.lastname %></td>
         <td><%= contact.email %></td>
         <td><%= contact.createddate %></td>
         <td><%= contact.homephone %></td>
         <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       </tr>
       <% end %>
      </table>

      <%= link_to 'prev', {:page => @page-1} %> |
      <%= link_to 'next', {:page => @page+1} %>

  </div>
</div>